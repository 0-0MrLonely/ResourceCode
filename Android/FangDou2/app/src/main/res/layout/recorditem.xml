<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#22221e"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22221e"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_text"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/record_cornerbackground"
            android:clickable="true"
            android:focusable="true"
            android:text="示例文本"
            android:textColor="@color/color_lrcColor_N"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_record"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="23dp"
                android:src="@mipmap/pic_record" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/img_natural"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginTop="23dp"
                android:src="@mipmap/pic_natural" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="50dp"
                android:src="@mipmap/pic_play" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
