<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.example.fangdou.MyDrawerLayout
        android:id="@+id/leftDraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_default"
            android:clickable="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.fangdou.MapView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="60dp" />

                </FrameLayout>


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <com.example.fangdou.MyListView
                        android:id="@+id/language_listView"
                        android:layout_width="350dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_cornerbackground"
                        android:fadingEdgeLength="100dp"
                        android:listSelector="@android:color/transparent"
                        android:requiresFadingEdge="vertical" />
                </android.support.v4.widget.NestedScrollView>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/infoFragment"
                android:layout_width="340dp"
                android:layout_height="580dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
            </FrameLayout>
        </FrameLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#616161"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/headlayout"
            app:itemTextColor="#ffffff"
            app:menu="@menu/menu_leftnavigation" />
    </com.example.fangdou.MyDrawerLayout>


</android.support.design.widget.CoordinatorLayout>